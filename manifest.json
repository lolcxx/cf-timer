{
  "manifest_version": 3,
  "name": "Codeforces Timer",
  "author": "Saurabh Patra",
  "version": "1.0",
  "description": "Timer that appears on Codeforces problem pages",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://codeforces.com/problemset/problem/*"],
      "js": ["content.js"]
    },
    {
      "matches": ["https://codeforces.com/contest/*/problem/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["timer.html", "timer.js"],
      "matches": ["https://codeforces.com/*"]
    }
  ]
}
